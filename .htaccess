# Petersen - URLs Amigables
# Habilitar el motor de reescritura
RewriteEngine On
RewriteBase /petersen/

# Redirigir www a no-www (opcional, descomentar si se desea)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# Forzar HTTPS (opcional, descomentar si se tiene SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirigir URLs con .php a URLs sin extensión
RewriteCond %{THE_REQUEST} \s/petersen/([^.]+)\.php [NC]
RewriteRule ^ /petersen/%1 [R=301,L]

# Redirigir URLs con .html a URLs sin extensión (para archivos HTML legacy)
RewriteCond %{THE_REQUEST} \s/petersen/([^.]+)\.html [NC]
RewriteRule ^ /petersen/%1 [R=301,L]

# Evitar redirecciones en archivos reales (assets, imágenes, etc)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Reescribir URLs limpias a archivos PHP
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Reescribir URLs limpias a archivos HTML (si existen en carpeta HTML)
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Página de error 404 personalizada (opcional)
# ErrorDocument 404 /404.php

# Deshabilitar listado de directorios
Options -Indexes

# Configuración de caché para assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/x-javascript "access plus 1 month"
</IfModule>

# Compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Protección de archivos sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
